<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PullToRefresh">
        <attr name="ptrAdapterViewBackground" format="reference|color" />
        <attr name="ptrHeaderBackground" format="reference|color" />
        <attr name="ptrHeaderTextColor" format="reference|color" />
        <attr name="ptrHeaderSubTextColor" format="reference|color" />
        <attr name="ptrMode">
            <flag name="pullDownFromTop" value="0x1" />
            <flag name="pullUpFromBottom" value="0x2" />
            <flag name="both" value="0x3" />
        </attr>
        <attr name="ptrShowIndicator" format="reference|boolean" />
        <attr name="ptrDrawable" format="reference" />
        
        <attr name="pull_to_refresh_from_bottom_pull_label" format="reference|integer"/>
        <attr name="pull_to_refresh_from_bottom_refreshing_label" format="reference|integer"/>
        <attr name="pull_to_refresh_from_bottom_release_label" format="reference|integer"/>
        <attr name="pull_to_refresh_pull_label" format="reference|integer"/>
        <attr name="pull_to_refresh_refreshing_label" format="reference|integer"/>
        <attr name="pull_to_refresh_release_label" format="reference|integer"/>
        
        <attr name="rotation_mode" format="reference|boolean" />
        
        <attr name="pull_to_refresh_pull_image" format="reference|integer"/>
        <attr name="pull_to_refresh_refreshing_image" format="reference|integer"/>
        <attr name="pull_to_refresh_release_image" format="reference|integer"/>
    </declare-styleable>

</resources>
